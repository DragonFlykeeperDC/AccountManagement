<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.digitalchina.xa.it.dao.KeywordToAccountDAO" >
	<sql id="BASE_TABLE">
		system_KeywordToAccount
	</sql>

	<sql id="BASE_COLUMN">
		keyword,account,backup1,backup2,backup3
	</sql>
  	
	<select id="selectByKeyword" resultType="com.digitalchina.xa.it.model.KeywordToAccountDomain">
		SELECT
			<include refid="BASE_COLUMN"/>
		FROM
			<include refid="BASE_TABLE"/>
		WHERE
			keyword = #{keyword}
	</select>
  
  	
  	<insert id="insertKeyword" parameterType="com.digitalchina.xa.it.model.KeywordToAccountDomain">
		INSERT INTO
			<include refid="BASE_TABLE"/>
			<trim prefix="(" suffix=")" suffixOverrides=",">
				keyword,account
			</trim>
			<trim prefix="VALUES(" suffix=")" suffixOverrides=",">
				#{keyword, jdbcType=VARCHAR},#{account, jdbcType=VARCHAR}
			</trim>
	</insert>
</mapper>