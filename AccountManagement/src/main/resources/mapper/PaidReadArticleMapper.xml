<mapper namespace="com.digitalchina.xa.it.dao.PaidReadArticleDAO" >
	<sql id="BASE_TABLE">
		t_paidread_article
	</sql>

	<sql id="BASE_COLUMN">
		id,name,author,available,balance,freePart,price,content,backup1,backup2,backup3
	</sql>
	
	<insert id="insertPaidReadArticle" parameterType="com.digitalchina.xa.it.model.PaidReadArticleDomain">
		INSERT INTO
			<include refid="BASE_TABLE"/>
			<trim prefix="(" suffix=")" suffixOverrides=",">
				name,author,available,balance,freePart,price,content
			</trim>
			<trim prefix="VALUES(" suffix=")" suffixOverrides=",">
				#{name, jdbcType=VARCHAR},#{author, jdbcType=INTEGER},#{available, jdbcType=INTEGER},
				#{balance, jdbcType=INTEGER},#{freePart, jdbcType=INTEGER},#{price, jdbcType=INTEGER},
				#{content, jdbcType=VARCHAR}
			</trim>
	</insert>
	
	<select id="selectPaidReadArticleByTime" resultType="com.digitalchina.xa.it.model.PaidReadArticleDomain">
		SELECT
			<include refid="BASE_COLUMN"/>
		FROM
			<include refid="BASE_TABLE"/>
		GROUP BY id DESC;
	</select>
	
	<select id="selectPaidReadArticleByHot" resultType="com.digitalchina.xa.it.model.PaidReadArticleDomain">
		SELECT
			<include refid="BASE_COLUMN"/>
		FROM
			<include refid="BASE_TABLE"/>
		GROUP BY balance DESC;
	</select>
	
